<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_contain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ps.app.ui.activity.DetailActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:id="@+id/tv_detail_id"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="案件序号 ： "
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_detail_id_info"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_detail_id"
            android:gravity="center"
            android:textSize="14sp"
            
            />


        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@id/tv_detail_id"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="嫌疑人： "
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_detail_name_info"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignLeft="@id/tv_detail_id_info"
            android:layout_below="@id/tv_detail_id"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/tv_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@id/tv_detail_name"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="立案日期： "
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_detail_time_info"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignLeft="@id/tv_detail_id_info"
            android:layout_below="@id/tv_detail_name_info"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_detail_time"
            android:gravity="center"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/tv_detail_thing_name"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@id/tv_detail_time"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="案件名称： "
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_detail_thing_name_info"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignLeft="@id/tv_detail_time_info"
            android:layout_below="@id/tv_detail_time"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_show_all_info"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/up_icon"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:onClick="showAllInfo"
            android:text="展开全部信息"
            />

        <ViewStub
            android:id="@+id/vs_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:inflatedId="@+id/ac_detail_id_after_inflate"
            android:layout="@layout/ac_detail_load_more_info"
            />

        <TextView
            android:id="@+id/tv_dimiss_all_info"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/arrow_up"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:onClick="showAllInfo"
            android:text="收起信息"
            android:visibility="gone"
            />
    </LinearLayout>


</LinearLayout>
